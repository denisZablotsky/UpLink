<!DOCTYPE html>
<html>
  <head>
    <title>UpLink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= current_user.email %>
      <%= link_to 'sign out', destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= link_to 'sign in', new_user_session_path, class: 'btn btn-info login_title' %> <%= link_to 'sign up', new_user_registration_path, class: 'link' %>
    <% end %>

    <%= yield %>
  </body>
</html>
